{
    "name": "@fun-gauge/core",
    "version": "1.0.0",
    "description": "A Gauge chart component for javascript and friends",
    "author": "Alejandro Madariaga Angeles",
    "private": true,
    "license": "MIT",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.mts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            }
        }
    },
    "scripts": {
        "lint": "biome lint",
        "build": "tsup src/index.ts --format esm,cjs,iife --treeshake --dts --clean",
        "build2": "rollup -c",
        "dev": "vite playgrounds",
        "server": "serve ."
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@types/d3-color": "^3.1.3",
        "@types/hammerjs": "^2.0.46",
        "@types/node": "^22.15.17",
        "hammerjs": "^2.0.8",
        "rollup": "^0.52.1",
        "rollup-plugin-babel": "^3.0.2",
        "rollup-plugin-commonjs": "^8.2.6",
        "rollup-plugin-node-resolve": "^3.0.0",
        "rollup-plugin-uglify": "^2.0.1",
        "serve": "^6.0.2",
        "throttleit": "^2.1.0",
        "tsup": "^8.4.0",
        "typescript": "^5.7.3",
        "uglify-es": "^3.2.2",
        "vite": "^6.1.0"
    },
    "dependencies": {
        "d3-color": "^3.1.0",
        "tiny-invariant": "^1.3.3",
        "ts-deepmerge": "^7.0.2"
    }
}
