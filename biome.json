{
    "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "includes": ["**", "!**/dist", "!**/node_modules", "!docs/.astro"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120,
        "lineEnding": "lf"
    },
    "assist": { "actions": { "source": { "organizeImports": "on" } } },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useConst": "off",
                "noNonNullAssertion": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "asNeeded",
            "jsxQuoteStyle": "single",
            "trailingCommas": "none"
        }
    },
    "json": {
        "parser": {
            "allowComments": true
        }
    },
    "html": {
        "formatter": {
            "enabled": true
        }
    }
}
